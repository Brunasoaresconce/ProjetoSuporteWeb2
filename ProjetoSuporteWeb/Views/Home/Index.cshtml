    }

    .sub-accordion-button {
        font-size: 20px;
        font-weight: normal;
        border: none;
        background: none;
        color: #0A0A2A;
        cursor: pointer;
        margin: 10px 0; /* Espaçamento vertical */
        display: block; /* Mantém os botões empilhados verticalmente */
        text-align: left;
        z-index: 10; /* Garante que o botão fique acima de outros elementos */
        position: relative;
    }

    .sub-accordion-content {
        padding: 10px;
        background-color: #e9e9e9;
        display: none; /* Inicialmente oculto */
        position: relative; /* Para evitar sobreposição */
        z-index: 1;
        margin-top: 10px; /* Adiciona espaçamento entre o botão e o conteúdo */
    }

    .topic-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .topic-section ul li {
            margin-bottom: 20px; /* Espaçamento entre os itens */
        }

   

</style>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Função para alternar visibilidade (nível principal)
        const accordionButtons = document.querySelectorAll(".accordion-button");
        accordionButtons.forEach((button) => {
            button.addEventListener("click", () => {
                const content = document.querySelector(`#${button.getAttribute("aria-controls")}`);
                const isExpanded = button.getAttribute("aria-expanded") === "true";
                button.setAttribute("aria-expanded", !isExpanded);
                content.style.display = isExpanded ? "none" : "block";
            });
        });

        // Função para alternar visibilidade (subníveis)
        const subAccordionButtons = document.querySelectorAll(".sub-accordion-button");
        subAccordionButtons.forEach((button) => {
            button.addEventListener("click", () => {
                const content = document.querySelector(`#${button.getAttribute("aria-controls")}`);
                const isExpanded = button.getAttribute("aria-expanded") === "true";
                button.setAttribute("aria-expanded", !isExpanded);
                content.style.display = isExpanded ? "none" : "block";
            });
        });
    });
</script>

